<%- include('../../partials/header.ejs') %> 
<%- include('../../partials/navbar.ejs') %>

<div class="container">
  <hr />
  <div class="card">
    <div class="card-header">
      <h2>Novo artigo</h2>
    </div>
    <div class="card-body">
      <form action="/articles/save" method="POST">
        <input
          class="form-control"
          type="text"
          name="title"
          placeholder="TÃ­tulo do artigo"
        /><br />
        <textarea id="article" cols="5" rows="10" class="form-control" placeholder="Escreva o artigo aqui" name="body"></textarea><br>
        <label>Categoria</label><br>
        <select class="form-control" name="category">

          <% categories.forEach((category) => { %>
            <option value="<%= category.id %>"><%= category.title %></option>
          <% }) %>

        </select><br>
        <button class="btn btn-primary">Cadastrar</button>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>

  tinymce.init({
    lnaguage: 'pt_BR',
    selector: "#article",
    plugins: [
      'advlist autolink ink image lists print preview searchreplace workcount fullscreen insertdatetime media save table paste emoticons autosave'
    ]
  });

</script>